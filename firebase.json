{
  "hosting": {
    "public": "dist",
    "rewrites": [
      {
        "source": "/api/**",
        "run": {
          "serviceId": "game-server",
          "region": "us-central1"
        }
      },
      {
        "source": "/quiz-master/**",
        "destination": "/quiz-master/index.html"
      },
      {
        "source": "/**",
        "destination": "/index.html"
      }
    ],
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "predeploy": "yarn workspace client build"
  }
}
