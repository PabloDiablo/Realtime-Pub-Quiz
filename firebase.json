{
  "functions": {
    "predeploy": "yarn build:server"
  },
  "hosting": {
    "public": "dist",
    "rewrites": [
      {
        "source": "/api/**",
        "function": "app"
      },
      {
        "source": "/quiz-master/**",
        "destination": "/quiz-master/index.html"
      },
      {
        "source": "/**",
        "destination": "/index.html"
      }
    ],
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "predeploy": "yarn build:client"
  }
}
