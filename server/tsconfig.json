{
  "compilerOptions": {
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "outDir": "lib",
    "sourceMap": true,
    "strict": false,
    "target": "es2017"
  },
  "compileOnSave": true,
  "exclude": ["node_modules", "../node_modules", "lib", "scripts", "**/*.test.ts", "**/*.test.tsx"],
  "include": ["./src"]
}
